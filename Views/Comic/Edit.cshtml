@model ComicSTore.Models.Comic

@{
    ViewData["Title"] = "Edit Comic";
}

<h1>@ViewData["Title"]</h1>

<h4>Comic</h4>
<hr />
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>
    <div class="form-group">
        <label for="Author">Author</label>
        <input type="text" class="form-control" asp-for="Author" />
    </div>
    <div class="form-group">
        <label for="Publisher">Publisher</label>
        <input type="text" class="form-control" asp-for="Publisher" />
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" step="0.01" class="form-control" asp-for="Price" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
